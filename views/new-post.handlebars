<div class="activities-card">
  <div class="card-header">
    <h2>Create a new activity</h2>
  </div>
  <form class="activities-form" id="new-activity-form">
    <div class="form-group">
      <label>Type of activity <i>(select from list)</i>:
        <select name="keyword" id="activity-select">
          <option value="">--Please choose an option--</option>
          <option value="Indoor">Indoor</option>
          <option value="Outdoor">Outdoor</option>
          <option value="Sports">Sports</option>
          <option value="Events">Events</option>
        </select>
      </label>
    </div>
    <div class="form-group">
      <label>Name of activity:
        <input class="form-input" type="text" name="type" /></label>
    </div>
    <div class="form-group">
      <label>Location:
        <input class="form-input" type="text" name="where" /></label>
    </div>
    <div class="form-group">
      <label>Activity date <i>(optional)</i>:
        <input class="form-input" type="text" name="event-date" /></label>
    </div>
    <div class="form-group">
      <label>Activity time <i>(optional)</i>:
        <input class="form-input" type="text" name="event-time" /></label>
    </div>
    <div class="form-group">
      <label>Is this a group activity?
        <select name="group-activity" id="group-select">
          <option value="no">No</option>
          <option value="yes">Yes</option>
        </select>
      </label>
    </div>
    <div class="form-group">
      <label>Please provide a brief description of this activity:
        <input class="form-input" type="text" name="description" /></label>
    </div>
    <button type="submit" class="btn btn-primary">Submit new activity</button>
  </form>
</div>

<script src="/js/post.js"></script>